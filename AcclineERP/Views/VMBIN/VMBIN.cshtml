@model App.Domain.VM_BIN
@{
    ViewBag.Title = "VMBIN";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<script src="~/App_Themes/Theme1/plugins/select2/select2.min.js" type="text/javascript"></script>
<script src="~/App_Themes/Theme1/plugins/bootstrap-datepicker/dist/js/bootstrap-datepicker.min.js"></script>
<link href="~/App_Themes/Theme1/plugins/bootstrap-daterangepicker/daterangepicker.css" rel="stylesheet">
<link href="~/App_Themes/Theme1/plugins/datatables/jquery.dataTables.min.css" rel="stylesheet" type="text/css" />
<link href="~/Css/FormDesign.css" rel="stylesheet" />

<style>
    .dataTables_scrollBody > table > thead > tr > th[class*="sort"]::after {
        display: none;
    }
</style>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-color panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">
                        <text style="text-align:left !important; text-decoration: none;">Business Identification Number(BIN)</text>

                    </h3>
                </div>
                <div class="panel-body">


                    <div class="col-md-6">
                        <div class="col-md-4">
                            <div class="radio radio-primary" style="text-align:right">
                                <input type="radio" id="rdoSingle" value="1" class="CancelType" name="CancelType" checked>
                                <label for="rdoSelf"> Single </label>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="radio radio-primary" style="text-align:right">
                                <input type="radio" id="rdoMultiple" value="0" class="CancelType" name="CancelType">
                                <label for="rdoSelf">Multiple </label>
                            </div>
                        </div>
                        <div class="col-md-4">
                        </div>
                    </div>

                    <div class="col-md-6" id="divCompanyBranch">
                        <div class="col-md-3">
                            <div class="checkbox checkbox-primary">
                                <input type="checkbox" name="chkCompany" class="CancelType" required="required" value="1" id="chkCompany" /><label>Company</label>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="checkbox checkbox-primary">
                                <input type="checkbox" name="chkCompany" class="CancelType" required="required" value="2" id="chkBranch" /><label>Branch</label>
                            </div>
                        </div>
                    </div>






                    <div class="col-md-12" style="margin-left:110px; margin-top:20px" id="ddfProjCode">
                        <label class="col-md-2" for="ProjCode">Project</label>
                        <div class="input-group form-group col-md-4">
                            @Html.DropDownListFor(x => x.ProjCode, null, new { @class = "form-control select2", required = "required" })

                        </div>
                    </div>

                    <div class="col-md-12" style="margin-left:110px; margin-top:20px" id="ddfBrCode">
                        <label class="col-md-2" for="BrCode">Branch</label>
                        <div class="input-group form-group col-md-4">
                            @Html.DropDownListFor(x => x.BranchCode, null, new { @class = "form-control select2", required = "required" })

                        </div>
                    </div>


                    <div class="col-md-12" style="margin-left:110px; margin-top:20px">
                        @Html.LabelFor(x => x.BINNo, new { @class = "col-md-2" })
                        <div class="input-group form-group col-md-4">
                            <input type="text" class="form-control  select2 " id="BINNo" name="BINNo" />

                        </div>
                    </div>



                    <div class="row col-md-12">
                        <div class="col-md-9" style="text-align:center">
                            <input type="submit" class="btn btn-primary" value="Save" id="btnSaveVM_BIN" />

                            <input type="button" class="btn btn-primary" value="Clear" id="btnClearVM_BIN" />
                        </div>


                        <div class="col-md-3">
                            @{
                                string UserName = Session["UserName"].ToString();
                                AcclineERP.Models.RBACUser rUser = new AcclineERP.Models.RBACUser(UserName);
                                if (rUser.HasPermission("GL_VM_BIN_Preview"))
                                {
                                    <a href="@Url.Action("GLOpenBalPreviewPdf", "GL_OpenBal")" target="_blank" class="btn btn-primary">Preview</a>
                                }
                            }

                        </div>
                    </div>
                    <br />


                    <div class="col-md-12">
                        <div class="col-md-12" style="margin: 0 auto; width: 100%">
                            <div class="row" style="margin-right:15px; margin-left:15px">
                                <div class="col-md-12">
                                    <br />
                                    <table class="table table-bordered table-responsive" id="datatable-buttonsJV" cellspacing="0" style="width: 100%;">
                                        <thead>
                                            <tr>
                                                <th style="text-align:center">ProjCode </th>
                                                <th style="text-align:center">BranchCode</th>
                                                <th style="text-align:center">BINNo</th>
                                                <th style="text-align:center">Action</th>

                                            </tr>
                                        </thead>
                                    </table>
                                </div>

                            </div>
                        </div>
                    </div>

                    <div class="col-md-12">
                        <div class="col-md-12" style="margin: 0 auto; width: 100%">
                            <div class="row" style="margin-right:15px; margin-left:15px">
                                <div class="col-md-12">
                                    <br />
                                </div>

                            </div>
                        </div>
                    </div>
                </div>

            </div>

        </div>

    </div>
</div>

@section Scripts{
    <script src="~/App_Themes/Theme1/plugins/select2/select2.min.js" type="text/javascript"></script>
    <script src="~/App_Themes/Theme1/plugins/bootstrap-datepicker/dist/js/bootstrap-datepicker.min.js"></script>
    <script src="../App_Themes/Theme1/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="../App_Themes/Theme1/plugins/datatables/dataTables.bootstrap.js"></script>
    <script src="../App_Themes/Theme1/plugins/datatables/dataTables.buttons.min.js"></script>
    <script src="../App_Themes/Theme1/plugins/datatables/buttons.bootstrap.min.js"></script>
    <script src="../App_Themes/Theme1/plugins/datatables/pdfmake.min.js"></script>
    <script src="../App_Themes/Theme1/plugins/datatables/vfs_fonts.js"></script>
    <script src="../App_Themes/Theme1/plugins/datatables/buttons.html5.min.js"></script>
    <script src="../App_Themes/Theme1/plugins/datatables/buttons.print.min.js"></script>
    <script src="../App_Themes/Theme1/plugins/datatables/dataTables.fixedHeader.min.js"></script>
    <script src="../App_Themes/Theme1/plugins/datatables/dataTables.keyTable.min.js"></script>
    <script src="../App_Themes/Theme1/plugins/datatables/dataTables.responsive.min.js"></script>
    <script src="../App_Themes/Theme1/plugins/datatables/responsive.bootstrap.min.js"></script>
    <script src="../App_Themes/Theme1/plugins/datatables/dataTables.scroller.min.js"></script>
    <script type="text/javascript" src="../App_Themes/Theme1/plugins/parsleyjs/dist/parsley.min.js"></script>
    <!-- Datatable init js -->
    <script src="../App_Themes/Theme1/blue/assets/pages/datatables.init.js"></script>
    <script>
        $(document).ready(function () {


            $("#divCompanyBranch").hide();
            $("#ddfBrCode").hide();
            $("#ddfProjCode").hide();


            $(document).on("change", ".CancelType", function () {


                if ($("#rdoSingle").is(":checked")) {
                    $("#divCompanyBranch").hide();
                    $("#ddfProjCode").hide();
                    $("#ddfBrCode").hide();

                }

                if ($("#rdoMultiple").is(":checked")) {
                    $("#divCompanyBranch").show();

                    if ($("#chkCompany").is(":checked")) {
                        $("#ddfProjCode").show();
                        $("#ddfBrCode").hide();

                    }

                    if ($("#chkBranch").is(":checked")) {
                        $("#ddfBrCode").show();
                        $("#ddfProjCode").hide();
                    }

                    if ($("#chkCompany").is(":checked") && $("#chkBranch").is(":checked")) {

                        $("#ddfProjCode").show();
                        $("#ddfBrCode").show();
                    }

                    //uncheked  operation

                    if (!$("#chkCompany").is(":checked")) {
                        $("#ddfProjCode").hide();

                    }


                    if (!$("#chkBranch").is(":checked")) {

                        $("#ddfProjCode").show();
                        $("#ddfBrCode").hide();
                    }

                    if (!$("#chkCompany").is(":checked")) {

                        if (!$("#chkBranch").is(":checked")) {
                            $("#ddfProjCode").hide();
                            $("#ddfBrCode").hide();
                        }
                    }













                }
            })

            @*------------ start data table Properties -------------------------- *@




            $('#datatable-buttonsJV').dataTable({
                "scrollX": true,
                "destroy": true,
                "api": true,
                "columns": [
                           { "data": "ProjCode" },
                           { "data": "BranchCode" },
                           { "data": "BINNo" },
                           {
                               mRender: function (data, type, row) {
                                   return '<a href="#" class="on-default remove-row deleteSup largeSpace" data-id="1" id="delete" value="' + row.Id + '">'
                                   + ' <i class="glyphicon glyphicon-trash"></i> </a>'
                               }
                           }
                ],
                "columnDefs": [
                                   {
                                       "targets": 2, // your case first column
                                       "className": "text-center",
                                   },
                                    {
                                        "targets": 3, // your case first column
                                        "className": "text-center",
                                    },

                ]

            });



            function loadGridByVNo() {
                $.ajax({
                    url: '@Url.Action("GetAllDataForVM_BIN", "VMBIN")',
                    contentType: "application/json;charset=utf-8",
                    //data: data,
                    type: 'GET',
                    dataType: 'json',
                    success: function (data) {

                        if (data.data.length >= 0) {
                            var table = $('#datatable-buttonsJV').DataTable();
                            table.clear();
                            table.rows.add(data.data).draw();


                        }

                    }
                });

            }


            loadGridByVNo();
            @*------------ end  data table Properties -------------------------- *@


            @*-------------------------------------------------------------------- *@
            @*------------ start button click Properties -------------------------- *@






            @*------------save  data -------------------------- *@


            $(document).on("click",
            "#btnSaveVM_BIN",
            function () {
                setVM_BIN();



                //var validate = validateAddDedOnSave(VM_BIN);
                //if (validate != "") {
                //    alert(validate);
                //    return;
                //}


                $.ajax({
                    url: '@Url.Action("SaveVM_BIN", "VMBIN")',
                    contentType: "application/json;charset=utf-8",
                    data: JSON.stringify({ VM_BIN: VM_BIN }),
                    type: 'POST',
                    dataType: 'json',
                    success: function (data) {                         //save  data

                        if (data == 1) {
                            swal({
                                title: "Ok",
                                text: "All Information Saved Sucessfully!",
                                type: "success"
                            }, function () {

                                loadGridByVNo();

                                $("#btnSaveVM_BIN").prop("disabled", false);
                                //clearVM_BIN();
                                ClearVM_BINControls();
                            });
                        }
                        else if (data == 0) {
                            swal({
                                title: "Sorry!",
                                text: "An Error Occured During Save",
                                type: "warning"
                            });
                            $("#btnSaveVM_BIN").prop("disabled", false);
                        }
                        else if (data == 2) {                           //save  data
                            swal({
                                title: "Sorry!",
                                text: "Data Already Exists",
                                type: "warning"
                            });
                            $("#btnSaveVM_BIN").prop("disabled", false);
                        }
                        else if (data == "X") {

                            swal({
                                title: "Sorry",
                                text: "No Save Permission for this User",
                                type: "warning"
                            });

                        }

                    }
                });
            });





            @*------------//update  data --------------------------*@






            $(document).on("click",
           "#btnUpdateVM_BIN",
           function () {

               $("#btnUpdateVM_BIN").hide();
               $("#btnSaveVM_BIN").show();
               setVM_BIN();
               var validate = validateAddDedOnSave(VM_BIN);
               if (validate != "") {
                   alert(validate);
                   return;
               }


               $.ajax({
                   url: '@Url.Action("UpdateOpenBalance", "GL_OpenBal")',
                   contentType: "application/json;charset=utf-8",
                   data: JSON.stringify({ VM_BIN: VM_BIN }),
                   type: 'POST',
                   dataType: 'json',
                   success: function (data) {
                       if (data == 1) {

                           swal({
                               title: "Ok",
                               text: "All Information Updated Sucessfully!",
                               type: "success"
                           }, function () {

                               loadGridByVNo();

                               $("#btnSaveVM_BIN").prop("disabled", false);
                               //clearVM_BIN();
                               ClearVM_BINControls();
                           });

                       }
                       else if (data == 0) {

                           swal({
                               title: "Sorry",
                               text: "An Error Occured During Update",
                               type: "warning"
                           }, function () {
                               $("#btnSaveVM_BIN").prop("disabled", false);
                           });

                       }
                       else if (data == 2) {

                           swal({
                               title: "Sorry",
                               text: "Data is InCorrect for Update",
                               type: "warning"
                           }, function () {
                               $("#btnSaveVM_BIN").prop("disabled", false);
                           });

                       }
                       else if (data == "U") {

                           swal({
                               title: "Sorry",
                               text: "No Update Permission for this User",
                               type: "warning"
                           });

                       }

                   }
               });
           });


            @*------------// edit  data --------------------------*@



            $('body').on('click', '#edit', function () {

                var table = $('#datatable-buttonsJV').DataTable();
                var data = table.row($(this).closest('tr')).data();

                var OpenBalId = data.Id;

                $.ajax({
                    url: '@Url.Action("GetOpenBalForEdit", "GL_OpenBal")',
                    contentType: "application/json;charset=utf-8",
                    data: { OpenBalId: OpenBalId },
                    type: "GET",
                    dataType: 'json',
                    success: function (data) {


                        if (data == 0) {

                            swal({
                                title: "Sorry!",
                                text: "An Error Occured During Load!",
                                type: "warning"
                            });

                            $("#btnSaveVM_BIN").show();
                            $("#btnUpdateVM_BIN").hide();


                        }
                        else {


                            if (!jQuery.isEmptyObject(data)) {


                                data = $.parseJSON(data);

                                $("#btnSaveVM_BIN").hide();
                                $("#btnUpdateVM_BIN").show();

                                setVM_BINObj(data);
                                setVM_BINFieldData(data);

                            }
                            else {

                                $("#btnSaveVM_BIN").show();
                                $("#btnUpdateVM_BIN").hide();
                            }


                        }

                    }
                });

            });


            @*------------// delete  data --------------------------*@


            $(document).on("click", "#delete", function () {

                var table = $('#datatable-buttonsJV').DataTable();
                var data = table.row($(this).closest('tr')).data();

                var value = data.Id;

                swal({
                    title: "Are you sure?",
                    text: "You will not be able to recover this data!",
                    type: "warning",
                    showCancelButton: true,
                    confirmButtonColor: "#DD6B55",
                    confirmButtonText: "Yes, delete it!",
                    closeOnConfirm: false,
                    closeOnCancel: true
                },
                    function () {
                        $.ajax({
                            url: '@Url.Action("DeleteVM_BIN", "VMBIN")',
                            contentType: "application/json;charset=utf-8",
                            data: { Id: value },
                            type: 'GET',
                            dataType: 'json',
                            success: function (datas) {



                                // messege by the  value of datas

                                if (datas == 0 || datas == 2) {
                                    swal("Sorry!! Failed to delete this data.", "fail");
                                }
                                else if (datas == 1) {
                                    swal({
                                        title: "Ok",
                                        text: "Sucessfully Delete!",
                                        type: "success"
                                    }, function () {

                                        ClearVM_BINControls();
                                        //clearVM_BIN();

                                        //reload data table
                                        loadGridByVNo();

                                    });
                                }
                                else if (datas == "D") {

                                    swal({
                                        title: "Sorry",
                                        text: "No Delete Permission for this User",
                                        type: "warning"
                                    });

                                }




                            },
                            error: function (datas) {
                                swal("Sorry!! Failed to delete this data.", "fail")
                            }
                        });
                    });


            });



            @*------------//clear  data --------------------------*@

            $("#btnClearVM_BIN").on("click", function () {

                var table = $('#datatable-buttonsJV').DataTable();
                // table.ajax.reload();

                //ClearVM_BINHiddenControls();
                ClearVM_BINControls();
                //clearVM_BIN();
            });



            @*------------ -------------------------------------------------------- *@
            @*------------ end  button click Properties -------------------------- *@
            var VM_BIN = {
                sl: 0,
                ProjCode: "",
                BranchCode: "",
                BINNo: ""
            };

            function setVM_BIN() {
                VM_BIN.ProjCode = $("#ProjCode").val();
                VM_BIN.BranchCode = $("#BranchCode").val();
                VM_BIN.BINNo = $("#BINNo").val();

            }



            function validateAddDedOnSave(validGLOpenBal) {


                if (parseFloat(validGLOpenBal.ProjCode) < 0) {
                    return "Project code is required.";
                }

                if (parseFloat(validGLOpenBal.BranchCode) < 0) {
                    return "Branch code is Required";
                }

                if (parseFloat(validGLOpenBal.Accode) < 0) {
                    return "Account code is Required";
                }

                if (validGLOpenBal.OpenBal == 0) {
                    return "Please Enter a amount";
                }

                //if (parseFloat(validGLOpenBal.OpenBal).toFixed(2).replace(",", ".") < 0) {
                //    return "Open Balance is Required";
                //}

                return "";
            }

            function ClearVM_BINControls() {


                $("#ProjCode").val($("#ProjCode option:first-child").val()).trigger('change.select2');
                $("#BranchCode").val($("#BranchCode option:first-child").val()).trigger('change.select2');
                //$("#Accode").val($("#Accode option:first-child").val()).trigger('change.select2');
                //$("#OpenBal").val();

                //$("#ProjCode").val($("#ProjCode ").val()).trigger('change.select2');
                //$("#BranchCode").val($("#BranchCode ").val()).trigger('change.select2');
                $("#BINNO").val("");


            }


        });//End
    </script>
}


