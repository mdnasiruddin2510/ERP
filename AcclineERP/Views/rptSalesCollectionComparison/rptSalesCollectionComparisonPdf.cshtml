                    decimal cmperc = 0;
                    decimal ccol = 0;
                    decimal ex_st = 0;
                    decimal psale = 0;
                    decimal pmperc = 0;
                    decimal pcol = 0;
                    decimal incdec = 0;
                    decimal incdecperc = 0;
                    decimal remark = 0;




                    foreach (var item in Model)
                    {

                        sl = sl + 1;
                        <tr>

                            <td style=" text-align:left; font-size:12px">
                                @item.monthname
