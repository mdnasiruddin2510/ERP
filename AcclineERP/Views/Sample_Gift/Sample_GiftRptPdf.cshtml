
@{
    Layout = null;
}

@model IEnumerable<App.Domain.ViewModel.Sample_giftRptVM>
@{
    ViewBag.Title = "Sample /Gift Report ";
    Layout = null;
    var fDate = Convert.ToDateTime(@ViewBag.fDate).ToString();
    var CompInfo = AcclineERP.Models.GetCompanyInfo.GetComInfo();
    string CompanyAddress = ((CompInfo.Addr1 == null ? string.Empty : CompInfo.Addr1) + "," + (CompInfo.Addr2 == null ? string.Empty : CompInfo.Addr2));
}

<script src="~/Scripts/jquery-1.9.1.min.js"></script>
<script src="~/Scripts/Export.js"></script>
<link href="~/App_Themes/Theme1/plugins/datatables/jquery.dataTables.min.css" rel="stylesheet" type="text/css" />
<link href="~/App_Themes/Theme1/plugins/bootstrap-daterangepicker/daterangepicker.css" rel="stylesheet">
<link href="~/App_Themes/Theme1/plugins/datatables/jquery.dataTables.min.css" rel="stylesheet" type="text/css" />
<link href="~/App_Themes/Theme1/plugins/select2/select2.css" rel="stylesheet" type="text/css" />
<link href="~/Css/FormDesign.css" rel="stylesheet" />

<style>
    tr {
        page-break-inside: avoid;
        height: auto;
    }

    body {
        padding-right: 0px;
        font-family: "HelveticaNeue-Light", "Helvetica Neue Light", "Helvetica Neue", Helvetica, Arial, "Lucida Grande", sans-serif;
    }

    .border {
        color: #335; /* Lighten up font color */
        font-family: "HelveticaNeue-Light", "Helvetica Neue Light", "Helvetica Neue", Helvetica, Arial, "Lucida Grande", sans-serif;
        font-weight: 300;
        border-collapse: collapse;
        border-spacing: 0;
    }

    .tds {
        /*border: 1px solid black;*/
        font-weight: 500;
        font-family: Arial;
        border-right: hidden !important;
    }
    /* Make cells a bit taller */
    .ths {
        /*border: 1px solid black;*/
        font-weight: 500;
        font-family: Arial;
    }

    .th {
        background: #F3F3F3; /* Light grey background */
        font-weight: bold; /* Make sure they're bold */
    }

    .td {
        background: #FAFAFA; /* Lighter grey background */
        text-align: center; /* Center our text */
    }

    .breakhere {
        page-break-after: always;
    }
</style>

<div id="toReport" class="panel-body" style="margin: auto; text-align:center !important;padding:10px">
    <div class="panel-heading" style="text-align:center">
        <div class="panel-title">
            <label style="text-align:center !important; text-decoration: none; font-size:25px; font-weight:bold">@CompInfo.CompName</label><br>
            <label style="text-align:center !important; text-decoration: none; font-size:23px; font-weight:normal">Office: @CompanyAddress</label><br>
            @*<label style="text-align:center !important; text-decoration: none; font-size:23px; font-weight:normal">Phone: @CompInfo.Tel</label><br>*@
        </div>
        <div class="panel-title">
            <text style="text-align:center !important; text-decoration: none; font-size:20px;font-family:'Arial Narrow'; font-weight:bold">@ViewBag.Title</text>
        </div>
        <div class="cashDate">
            <text style="text-align:center !important; text-decoration: none; font-size:15px;font-family:'Arial Narrow';">From : @ViewBag.fDate &nbsp;&nbsp; To: @ViewBag.tDate</text>
        </div>
        <div class="panel-title">
            <text style="text-align:center !important; text-decoration: none; font-size:20px;font-family:'Arial Narrow'; font-weight:bold">@ViewBag.Criteria</text>
        </div>

        <div>
   
            <label style="text-align:left !important; float:left;text-decoration: none; font-size:12px; font-weight:bold">Location : @ViewBag.Location</label><br>
        </div>
    </div>
    <hr style="border-bottom: 1px solid" />
    <br />

    <div class="panel-body" style="text-align:center">
        <table cellpadding="5" cellspacing="5" border=1 frame=box rules=all style="width:100%">
            <thead style="height:300px ; width:300px;overflow: visible !important;">
                <tr>
                    <th style="font-size:14px; font-family:'Arial Narrow'; text-align:center">No</th>
                    <th style=" font-size: 14px; font-family: 'Arial Narrow'; text-align: center">Date</th>

                    <th style=" font-size: 14px; font-family: 'Arial Narrow'; text-align: center">Type</th>
                    <th style=" font-size: 14px; font-family: 'Arial Narrow'; text-align: center">Item </th>
                    <th style=" font-size: 14px; font-family: 'Arial Narrow'; text-align: center">Lot</th>
                    <th style=" font-size: 14px; font-family: 'Arial Narrow'; text-align: center">Quantity</th>
                    <th style=" font-size: 14px; font-family: 'Arial Narrow'; text-align: center">U_Price</th>
                    <th style=" font-size: 14px; font-family: 'Arial Narrow'; text-align: center">Amount</th>
                    <th style=" font-size: 14px; font-family: 'Arial Narrow'; text-align: center"><text> Given_To <text></th>
                </tr>
                
                
                
                
                
                
                
                
                 

            </thead>

            <tbody id="tbodyId">
                @{

                   

                    foreach (var item in Model)
                    {




                       
                        <tr>
                            <td style=" text-align:left; font-size:12px">
                                @item.No
                            </td>
                            <td style=" text-align:left; font-size:12px">
                                @item.date
                            </td>
                            <td style=" text-align:right; font-size:12px">
                                @item.Type
                            </td>
                            <td style="text-align:right; font-size:12px">
                                @item.Item
                            </td>
                            <td style=" text-align:right; font-size:12px;">
                                @item.Lot
                            </td>
                            <td style=" text-align:right; font-size:12px;">
                                @item.Quantity
                            </td>
                            <td style=" text-align:right; font-size:12px;">
                                @item.U_Price
                            </td>
                            <td style=" text-align:right; font-size:12px;">
                                @item.Amount
                            </td>
                            <td style=" text-align:right; font-size:12px;">
                                @item.Given_To
                            </td>
                        </tr>

                        




                    }

                }

               

            </tbody>
        </table>
        @*<table cellpadding="5" cellspacing="1" border=1 frame=box rules=all style="width:100%">
                <thead style="height:300px; overflow: visible !important;">




                </thead>
            </table>*@
    </div>

</div>
