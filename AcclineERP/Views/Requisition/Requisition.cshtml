@model App.Domain.ViewModel.RequsitionVM
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
   
    .form-control {
        border: 1px solid #00ffff;
    }

    fieldset {
        display: block;
        margin-left: 2px;
        margin-right: 2px;
        padding-top: 0.35em;
        padding-bottom: 0.625em;
        padding-left: 0.75em;
        padding-right: 0.75em;
        border: 2px groove;
    }

    legend {
        display: block;
        padding-left: 2px;
        padding-right: 2px;
        border: none;
    }
</style>

@using (Html.BeginForm())
{
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-color panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">
                        <text style="text-align:left !important;text-decoration:none;">Requisition</text>
                    </h3>
                </div>
                <div class="panel-body">
                    <div class="col-md-12">
                        <div class="col-md-6">
                            <label class="col-md-2">Location</label>
                            <div class="input-group form-group col-md-9">
                                @Html.DropDownListFor(x => x.Location, null, "---- Select ----", new { @class = "form-control select2", @Value = ViewBag.Location })
                            </div>
                        </div>


                    </div>
                    <div class="col-md-12">
                        <div class="col-md-6">
                            <label class="col-md-2">Requisiton No.</label>
                            <div class="input-group form-group col-md-8">
                                @Html.TextBoxFor(x => x.ReqNo, new { @class = "form-control", @Value = ViewBag.ReqNo })
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="col-md-6">
                            <label class="col-md-2">User</label>
                            <div class="input-group form-group col-md-9">
                                @Html.DropDownListFor(x => x.User, null, "---- Select ----", new { @class = "form-control select2", @Value = ViewBag.User })
                            </div>
                        </div>

                    </div>

                    <div class="col-md-12">
                        <div class="col-md-6">
                            <label class="col-md-2">Item Type</label>
                            <div class="input-group form-group col-md-8">
                                @Html.DropDownListFor(x => x.ItemType, null, "---- Select ----", new { @class = "form-control select2", @Value = ViewBag.ItemType })

                            </div>
                        </div>
                        <div class="col-md-6">
                            <label class="col-md-2">Group</label>
                            <div class="input-group form-group col-md-8">
                                @Html.DropDownListFor(x => x.Group, null, "---- Select ----", new { @class = "form-control select2", @Value = ViewBag.Group })

                            </div>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="col-md-6">
                            <label class="col-md-2">ItemCode</label>
                            <div class="input-group form-group col-md-8">
                                @Html.TextBoxFor(x => x.ItemCode, new { @class = "form-control", @Value = ViewBag.ItemCode })
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label class="col-md-2">ItemName</label>
                            <div class="input-group form-group col-md-8">
                                @Html.TextBoxFor(x => x.ItemName, new { @class = "form-control", @Value = ViewBag.ItemName })
                            </div>
                        </div>
                    </div>

                    <div class="col-md-12">
                        <div class="col-md-6">
                            <label class="col-md-2">Unit In</label>
                            <div class="input-group form-group col-md-8">
                                @Html.TextBoxFor(x => x.Unitin, new { @class = "form-control", @Value = ViewBag.Unitin })
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label class="col-md-2">UnitPrice</label>
                            <div class="input-group form-group col-md-8">
                                @Html.TextBoxFor(x => x.UnitPrice, new { @class = "form-control", @Value = ViewBag.UnitPrice })
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="col-md-6">
                            <label class="col-md-2">Current Stock</label>
                            <div class="input-group form-group col-md-8">
                                @Html.TextBoxFor(x => x.CurStock, new { @class = "form-control", @Value = ViewBag.CurStock })
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label class="col-md-2">Last 3 Months Issue</label>
                            <div class="input-group form-group col-md-8">
                                @Html.TextBoxFor(x => x.Last3mis, new { @class = "form-control", @Value = ViewBag.Last3mis })
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="col-md-6">
                            <label class="col-md-2">Last Purchase Date</label>
                            <div class="input-group form-group col-md-8">
                                <input type="text" class="form-control datePage" id="@Html.IdFor(x => x.LastPurDate)" value="@DateTime.Today.ToShortDateString()">
                                <span class="input-group-addon bg-primary b-0 text-white"><i class="ion-calendar"></i></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label class="col-md-2">Last Purchase Qty.</label>
                            <div class="input-group form-group col-md-8">
                                @Html.TextBoxFor(x => x.LastPurQty, new { @class = "form-control", @Value = ViewBag.LastPurQty })
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="col-md-6">
                            <label class="col-md-2">Order Quantity</label>
                            <div class="input-group form-group col-md-6">
                                @Html.TextBoxFor(x => x.OrderQty, new { @class = "form-control", @Value = ViewBag.OrderQty })
                            </div>
                        </div>

                    </div>
                    <div class="col-md-12">
                        <div class="col-md-6">
                            <label class="col-md-2">Remarks</label>
                            <div class="input-group form-group col-md-8">
                                @Html.TextAreaFor(x => x.Remarks, new { @class = "form-control", @Value = ViewBag.Remarks })
                            </div>
                        </div>
                    </div>

                    <div class="row col-md-12" style="text-align:end">
                        @*<div class="col-md-11" style=" text-align:right;overflow:hidden">
                        *@

                        <input type="hidden" id="sNo" name="sNo" />
                        <input type="button" value="Add" class="btn btn-primary" id="btnadd" style="width:100px; margin-right:0px" />
                        <input type="button" value="Remove" class="btn btn-danger" id="btnremove" style="width:100px;" />



                        @*
                            </div>*@
                    </div>
                    <div class="col-sm-12 col-md-12" style="margin-top: 10px; margin-bottom: 10px;">
                        <div class="row col-sm-12 col-md-12" style="border:1px solid; border-color:#adcceb; width:100%">
                            <div class="row">
                                <div class="col-sm-12 col-md-12" style="padding:1px 18px 1px 18px">
                                    <br />
                                    <table class="table table-bordered table-responsive" id="Add-datatable" style="width:100%">
                                        <thead>
                                            <tr>
                                                <th width="5%">Code</th>
                                                <th width="10%">Item&nbsp;Name</th>
                                                <th width="5%">Unit&nbsp;In</th>
                                                <th width="5%">U.&nbsp;Price</th>
                                                <th width="5%">Ordered&nbsp;Qty</th>
                                                <th width="5%">EstimatedTK</th>
                                                <th width="5%">CurrentStock</th>
                                                <th width="5%">Last&nbsp;3M&nbsp;issue</th>
                                                <th width="40%">Remarks</th>
                                                <th width="5%">LastPurDate</th>
                                                <th width="5%">LasPurQty</th>
                                            </tr>
                                        </thead>
                                        <tbody id="tbodyId"></tbody>

                                    </table>
                                    <br />
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row col-md-12" style="text-align:end">
                        @*<div class="col-md-11" style=" text-align:right;overflow:hidden">
                        *@

                        <input type="hidden" id="sNo" name="sNo" />
                        <input type="button" value="Save" class="btn btn-primary" id="btnsave" style="width:100px; margin-right:0px" />
                        <input type="button" value="Clear" class="btn btn-primary" id="btnclear" style="width:100px;" />
                        <input type="button" value="Preview" class="btn btn-primary" id="btnPreview" style="width:100px;" />
                        <input type="button" value="Exit" class="btn btn-primary" id="btnExit" style="width:100px;" />


                        @*
                            </div>*@
                    </div>

                </div>
            </div>


        </div>
    </div>
}


@section scripts{
    <script src="~/App_Themes/Theme1/plugins/select2/select2.min.js" type="text/javascript"></script>
    <script src="~/App_Themes/Theme1/plugins/bootstrap-datepicker/dist/js/bootstrap-datepicker.min.js"></script>
    <script src="../App_Themes/Theme1/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="../App_Themes/Theme1/plugins/datatables/dataTables.bootstrap.js"></script>
    <script src="../App_Themes/Theme1/plugins/datatables/dataTables.buttons.min.js"></script>
    <script src="../App_Themes/Theme1/plugins/datatables/buttons.bootstrap.min.js"></script>
    <script src="../App_Themes/Theme1/plugins/datatables/pdfmake.min.js"></script>
    <script src="../App_Themes/Theme1/plugins/datatables/vfs_fonts.js"></script>
    <script src="../App_Themes/Theme1/plugins/datatables/buttons.html5.min.js"></script>
    <script src="../App_Themes/Theme1/plugins/datatables/buttons.print.min.js"></script>
    <script src="../App_Themes/Theme1/plugins/datatables/dataTables.fixedHeader.min.js"></script>
    <script src="../App_Themes/Theme1/plugins/datatables/dataTables.keyTable.min.js"></script>
    <script src="../App_Themes/Theme1/plugins/datatables/dataTables.responsive.min.js"></script>
    <script src="../App_Themes/Theme1/plugins/datatables/responsive.bootstrap.min.js"></script>
    <script src="../App_Themes/Theme1/plugins/datatables/dataTables.scroller.min.js"></script>
    <script type="text/javascript" src="../App_Themes/Theme1/plugins/parsleyjs/dist/parsley.min.js"></script>
    <script src="../App_Themes/Theme1/blue/assets/pages/datatables.init.js"></script>
}
