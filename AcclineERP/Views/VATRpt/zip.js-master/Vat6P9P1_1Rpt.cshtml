                    </div>
                </div>
            </div>
            <div class="row col-md-12" style="text-align:end">
                <div class="col-md-6" style=" text-align:right">
                  
                    @*<input type="button" name="command" value="Preview" class="btn btn-primary" id="Preview2" />
                    <input type="button" name="command" value="Print" class="btn btn-primary" id="Print2" />*@

                    <input type="button" value="Preview" class="btn btn-primary" id="Preview2" onclick="location.href='@Url.Action("TransWiseVat6P9P1_1RptPdf", "Vat", new { finYear = "2019-20", fDate = Convert.ToDateTime("15/09/2019"), tDate = Convert.ToDateTime("15/09/2019"), command = "Preview" })'" />
                    <input type="button" value="Print"  class="btn btn-primary" id="Print2" onclick="location.href='@Url.Action("TransWiseVat6P9P1_1RptPdf", "Vat", new { finYear = "2019-20", fDate = Convert.ToDateTime("15/09/2019"), tDate = Convert.ToDateTime("15/09/2019"), command = "Print" })'" />
                    <input type="button" name="command" value="Submit To NBR" class="btn btn-primary" id="btnSubmitToNBR" />
                 </div>
            </div>
            <br />
            <br />
        </div>
    </div>
</div>


