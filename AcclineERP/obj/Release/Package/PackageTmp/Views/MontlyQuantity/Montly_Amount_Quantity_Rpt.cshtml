    ViewBag.Title = "Montly Quantity and Amount Report";
}



@using (Html.BeginForm("MontlyQuantityRptPdf2", "MontlyQuantity", FormMethod.Post, new { onsubmit = "return validation_radio()", target = "_blank" }))
{
    <div class="row">
        <div class="col-md-10">
            <div class="panel panel-color panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">
                        <text style="text-align:left !important; text-decoration: none">Monthwise Sales Statement</text>
                    </h3>
                </div>
                <div class="panel-body">



                    <div class="col-md-12" style="margin-left:110px; margin-top:10px" id="ddfProjCode">
                        <label class="col-md-2" for="ProjCode">Project</label>
                        <div class="input-group form-group col-md-4">
                            @Html.DropDownListFor(x => x.projCode, null, new { @class = "form-control select2", @id = "projCode", @Value = ViewBag.ProjCode })
                        </div>
                    </div>
                    <div class="col-md-12" style="margin-left:110px; margin-top:10px" id="ddfBrCode">
                        <label class="col-md-2">Location</label>
                        <div class="input-group form-group col-md-4">
                            @Html.DropDownListFor(x => x.Location, null, "All", new { @class = "form-control select2", @id = "Location" })
                        </div>
                    </div>
                    <div class="col-md-12" style="margin-left:110px; margin-top:10px" id="ddfBrCode">
                        <label class="col-md-2" for="BrCode">Branch</label>
                        <div class="input-group form-group col-md-4">
                            @Html.DropDownListFor(x => x.BranchCode, null, "All", new { @class = "form-control select2", @id = "BranchCode" })
                        </div>
                    </div>
                    <div class="col-md-12" style="margin-left:110px; margin-top:10px" id="ddfBrCode">
                        <label class="col-md-2">Customer Name</label>
                        <div class="input-group form-group col-md-4">
                            @Html.DropDownListFor(x => x.CustomerName, null, "All", new { @class = "form-control select2", @id = "CustomerName" })
                        </div>
                    </div>
                    <div class="col-md-12" style="margin-left:110px; margin-top:20px">
                        <label class="col-md-2" for="fDate">From Date</label>
                        <div class="input-group form-group col-md-4">
                            <input type="text" class="form-control datePage" id="fDate" @*onchange="myFunction()"*@ name="fDate" value="@ViewBag.FyddFDate.ToShortDateString()" />
                            <span class="input-group-addon bg-primary b-0 text-white"><i class="ion-calendar"></i></span>
                        </div>
                    </div>
                    <div class="col-md-12" style="margin-left:110px; margin-top:20px">
                        <label class="col-md-2" for="tDate">To Date</label>
                        <div class="input-group form-group col-md-4">
                            <input type="text" class="form-control datePage" id="tDate" @*onchange="myFunction()"*@ name="tDate" value="@ViewBag.FyddTDate.ToShortDateString()" />
                            <span class="input-group-addon bg-primary b-0 text-white"><i class="ion-calendar"></i></span>
                        </div>
                    </div>

                    <div class="col-md-12" style="margin-left:110px;">

                        <label class="col-md-2" for="RptType"></label>
                        <div class="col-md-6">
                            <div id="X">
                                <div class="radio">
                                    <input type="radio" name="QtyAmt" value="Amount" id="Amount" />
                                    <label for="Report">Amount </label>
                                </div>
                                <div class="radio">
                                    <input type="radio" name="QtyAmt" value="Quantity" id="Quantity" />
                                    <label for="Reports">Quantity </label>
                                </div>
                            </div>
                        </div>

                    </div>
                    @*<div class="col-md-6" style="margin-left:110px; margin-top:20px">

                        </div>*@

                    <div class="col-md-12" style="margin-left:150px; margin-top:20px">
                        <div class="col-xs-12">
                            <div class="input-group">
                                <p style="color:red">
                                    @ViewBag.Message
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-10">
                        <br />
                    </div>
                    <div class="row col-md-12" style="text-align:end">
                        <div class="col-md-8" style=" text-align:right">
                            <input type="submit" value="Preview" class="btn btn-primary" id="submit" style="width:100px;" />
                            <input type="button" value="Clear" class="btn btn-primary" id="clear" style="width:100px;" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

}
