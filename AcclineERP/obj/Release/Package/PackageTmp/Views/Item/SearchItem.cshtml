                        </div>

                    </div>
                    @*<div class="col-md-6">
                            <label class="col-md-4">Item Type</label>
                            <div class="input-group form-group col-md-8">
                                @Html.DropDownListFor(x => x.ItemType, null, "---- Select ----", new { @class = "form-control select2", @Value = ViewBag.ItemType })

