@model App.Domain.ViewModel.RptSearchVModel

@{
    ViewBag.Title = "Sales_Collection Comparision Search";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/Scripts/jquery-1.9.1.min.js"></script>
<script src="~/Scripts/Export.js"></script>
<link href="~/App_Themes/Theme1/plugins/datatables/jquery.dataTables.min.css" rel="stylesheet" type="text/css" />
<link href="~/App_Themes/Theme1/plugins/bootstrap-daterangepicker/daterangepicker.css" rel="stylesheet">
<link href="~/App_Themes/Theme1/plugins/datatables/jquery.dataTables.min.css" rel="stylesheet" type="text/css" />
<link href="~/App_Themes/Theme1/plugins/select2/select2.css" rel="stylesheet" type="text/css" />
<link href="~/Css/FormDesign.css" rel="stylesheet" />

@using (Html.BeginForm("rptSalesCollectionComparisonPdf", "rptSalesCollectionComparison", FormMethod.Post, new { target = "_blank" }))
{
    <div class="row">
        <div class="col-md-10">
            <div class="panel panel-color panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">
                        <text style="text-align:left !important; text-decoration: none;">Sales Collection Comparision Search</text>
                        <text style="color:#1E3B2D;font-size:12px;margin-right:100px;" class="pull-right">@ViewBag.Status</text>
                    </h3>
                </div>
                <div class="panel-body">

                    @*<div class="col-md-12" style="margin-left:110px; margin-top:10px" id="">
                        <label class="col-md-2" for="SubCode">Customer</label>
                        <div class="input-group form-group col-md-4">
                            @Html.DropDownListFor(x => x.SubCode, null, "All", new { @class = "form-control select2", @id = "SubCode",required = "required" })

                        </div>
                    </div>*@
                    <div class="col-md-12" style="margin-left:110px; margin-top:10px" id="ddfProjCode">
                        <label class="col-md-2" for="ProjCode">Project</label>
                        <div class="input-group form-group col-md-4">
                            @Html.DropDownListFor(x => x.projCode, null, new { @class = "form-control select2", @id = "projCode", @Value = ViewBag.ProjCode, required = "required" })
                        </div>
                    </div>
                    <div class="col-md-12" style="margin-left:110px; margin-top:10px" id="ddfBrCode">
                        <label class="col-md-2" for="BrCode">Branch</label>
                        <div class="input-group form-group col-md-4">
                            @Html.DropDownListFor(x => x.BranchCode, null, "All", new { @class = "form-control select2", @id = "BranchCode", required = "required" })

                        </div>
                    </div>
                
                  
                    <div class="col-md-12" style="margin-left:110px; margin-top:20px">
                        <label class="col-md-2" for="fDate">From Date</label>
                        <div class="input-group form-group col-md-4">
                            <input type="text" class="form-control datePage" id="fDate" name="fDate" value="@ViewBag.FyddFDate.ToShortDateString()">
                            <span class="input-group-addon bg-primary b-0 text-white"><i class="ion-calendar"></i></span>
                        </div>
                    </div>
                    <div class="col-md-12" style="margin-left:110px; margin-top:20px">
                        <label class="col-md-2" for="tDate">To Date</label>
                        <div class="input-group form-group col-md-4">
                            <input type="text" class="form-control datePage" id="tDate" name="tDate" value="@ViewBag.FyddTDate.ToShortDateString()">
                            <span class="input-group-addon bg-primary b-0 text-white"><i class="ion-calendar"></i></span>
                        </div>
                    </div>
                    <div class="col-md-12" style="margin-left:150px; margin-top:20px">
                        <div class="col-xs-12">
                            <div class="input-group">

                                <p style="color:red">
                                    @ViewBag.Message
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-10">
                        <br />
                    </div>
                    <div class="row col-md-12" style="text-align:end">
                        <div class="col-md-8" style=" text-align:right">
                            <input type="submit" value="Submit" class="btn btn-primary" id="submit" style="width:100px;" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

}

@section Scripts{

    @Scripts.Render("~/bundles/jqueryval")

    <script src="/App_Themes/Theme1/plugins/select2/select2.min.js"></script>
    <script src="~/App_Themes/Theme1/plugins/bootstrap-datepicker/dist/js/bootstrap-datepicker.min.js"></script>

    <script type="text/javascript">

        $(document).ready(function () {

            $('#projCode').select2();
            $('#BranchCode').select2();
            $('#LocCode').select2();

            jQuery("#fDate").datepicker({
                autoclose: true,
                todayHighlight: true
            });

            jQuery("#tDate").datepicker({
                autoclose: true,
                todayHighlight: true
            });


        });

    </script>
}
