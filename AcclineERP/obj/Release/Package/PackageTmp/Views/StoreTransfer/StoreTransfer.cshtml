@model App.Domain.ViewModel.StoreTransferVM
@{
    ViewBag.Title = "StoreTransfer";
}
<link href="~/App_Themes/Theme1/plugins/datatables/jquery.dataTables.min.css" rel="stylesheet" type="text/css" />
<link href="~/App_Themes/Theme1/plugins/bootstrap-daterangepicker/daterangepicker.css" rel="stylesheet">
<link href="~/App_Themes/Theme1/plugins/datatables/jquery.dataTables.min.css" rel="stylesheet" type="text/css" />
<link href="~/App_Themes/Theme1/plugins/select2/select2.css" rel="stylesheet" type="text/css" />
<link href="~/Css/FormDesign.css" rel="stylesheet" />
<style>
    table.dataTable.select tbody tr,
    table.dataTable thead th:first-child {
        cursor: pointer;
    }

    .form-control {
        border: 1px solid #00ffff;
    }

    input#vat6p5 {
        width: 25px;
        height: 15px;
        margin-top: 0px;
    }

    .col-md-12 {
        padding: 0 !important;
    }

    .required:after {
        content: " *";
        font-weight: bold;
        color: red;
    }
</style>
@using (Html.BeginForm())
{
    <div class="row">
        <div class="col-md-11">
            <div class="panel panel-color panel-primary">
                <div class="modal fade in" id="pView" role="dialog" aria-hidden="true">
                    @Html.Partial("~/Views/Sales/CommonPV.cshtml")
                </div>

                <div class="panel-heading">
                    <h3 class="panel-title">
                        <text style="text-align:left !important; text-decoration: none;">Store Transfer</text>
                        <text id="@Html.IdFor(x => x.BranchCode)" style="text-align:right !important; text-decoration: none; font-weight:bold; color:antiquewhite; font-size:medium; margin-left:560px">@ViewBag.branchCode</text>
                    </h3>
                </div>
                <div class="panel-body">
                    <div class="form-group col-md-12" style=" text-align :left;">
                        <div class="radio radio-inline" style="padding-left: 40px;">
                            <input type="radio" value="1" class="StoreType" name="StoreType" id="issuStoreType">
                            <label for="issuStoreType"> Issue </label>
                        </div>
                        <div class="radio radio-inline" style="padding-left: 50px;">
                            <input type="radio" id="recvStoreType" name="StoreType" class="StoreType" value="2">
                            <label for="recvStoreType"> Receive </label>
                        </div>
                    </div>

                    <div class="col-md-12">
                        <div class="col-md-3" id="pnlIssuNo">
                            <label class="col-md-5">Issue No</label>
                            <div class="input-group form-group col-md-7" style="padding-left:1px;">
                                <input type="text" class="form-control" id="IssueNo" name="IssueNo" value="@ViewBag.IssueNo" , required="required" />
                                <input type="hidden" id="PreIssueNo">
                            </div>
                        </div>
                        <div class="col-md-3" id="pnlRecvNo">
                            <label class="col-md-5">Receive No</label>
                            <div class="input-group form-group col-md-7" style="padding-left:1px;">
                                <input type="text" class="form-control" id="RcvNo" name="RcvNo" value="@ViewBag.ReceiveNo" , required="required" />
                            </div>
                        </div>

                        <div class="col-md-3">
                            <label class="col-md-4" id="issueLbl"></label>
                            <div class="input-group form-group col-md-8">
                                <input type="text" class="form-control datePage" id="@Html.IdFor(x => x.IssueDate)" value="@DateTime.Today.ToShortDateString()">
                                <span class="input-group-addon bg-primary b-0 text-white"><i class="ion-calendar"></i></span>
                            </div>
                        </div>
                        <div class="col-md-6" id="pnlFromLoc">
                            <label class="col-md-3 required">From Location</label>
                            <div class="input-group form-group col-md-9">
                                @Html.DropDownListFor(x => x.FromLocCode, null, new { @class = "form-control select2", @Value = ViewBag.FromLocCode })

                                @Html.ValidationMessageFor(x => x.FromLocCode)
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="col-md-3">
                            <label class="col-md-5">Ref No</label>
                            <div class="input-group form-group col-md-7">
                                @Html.TextBoxFor(x => x.RefNo, new { @class = "form-control col-md-8 select2", required = "required" })
                                @Html.ValidationMessageFor(x => x.RefNo)
                            </div>
                        </div>
                        <div class="col-md-3">
                            <label class="col-md-4">Ref Date</label>
                            <div class="input-group form-group col-md-8">
                                <input type="text" class="form-control datePage" id="@Html.IdFor(x => x.RefDate)" value="@DateTime.Today.ToShortDateString()">
                                <span class="input-group-addon bg-primary b-0 text-white"><i class="ion-calendar"></i></span>
                            </div>
                        </div>
                        <div class="col-md-6" id="pnlFromLoc">
                            <label class="col-md-3 required">To Location</label>
                            <div class="input-group form-group col-md-9">
                                @Html.DropDownListFor(x => x.ToLocCode, null, new { @class = "form-control select2", @Value = ViewBag.ToLocCode })
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-12">
                        <div class="col-md-6">
                            <div class="col-md-12">
                                <label class="col-md-3">Item Type</label>
                                <div class="input-group form-group col-md-8">
                                    @Html.DropDownListFor(x => x.ItemType, null, "---- Select ----", new { @class = "form-control select2", @Value = ViewBag.ItemType })

                                </div>
                            </div>
                            <div class="col-md-12">
                                <label class="col-md-3 required">Item</label>
                                <div class="input-group form-group col-md-8">
                                    @Html.DropDownListFor(x => x.ItemCode, null, new { @class = "form-control select2", @Value = ViewBag.ItemCode })
                                </div>
                            </div>
                            @if (ViewBag.MaintVAT == true)
                            {
                                <div class="col-md-12">
                                    <label class="col-md-3">HS Code</label>
                                    <div class="input-group form-group col-md-8">
                                        @Html.TextBoxFor(x => x.HSCode, new { @class = "form-control col-md-8 select2", required = "required" })
                                    </div>
                                </div>
                            }
                            <div class="col-md-12">
                                <div class="col-md-6">
                                    <label class="col-md-6 required">Qty</label>
                                    <div class="input-group form-group col-md-6">
                                        @Html.TextBoxFor(x => x.Qty, new { @class = "form-control col-md-8 select2", required = "required" })
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <label class="col-md-5">Existing Qty</label>
                                    <div class="input-group form-group col-md-5">
                                        @Html.TextBoxFor(x => x.ExQty, new { @class = "form-control col-md-8 select2", required = "required" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="col-md-6">
                                    <label class="col-md-6 required">Price</label>
                                    <div class="input-group form-group col-md-6">
                                        @Html.TextBoxFor(x => x.Price, new { @class = "form-control col-md-8 select2", required = "required" })
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <label class="col-md-5">Amount</label>
                                    <div class="input-group form-group col-md-5">
                                        @Html.TextBoxFor(x => x.Amount, new { @class = "form-control col-md-8 select2", required = "required" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="col-md-6">
                                    <label class="col-md-6">Suplimentary Tax</label>
                                    <div class="input-group form-group col-md-6">
                                        @Html.TextBoxFor(x => x.SupTaxAmt, new { @class = "form-control col-md-8 select2", required = "required" })
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <label class="col-md-5">VAT Amount</label>
                                    <div class="input-group form-group col-md-5">
                                        @Html.TextBoxFor(x => x.VATAmt, new { @class = "form-control col-md-8 select2", required = "required" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <label class="col-md-3">Description</label>
                                <div class="input-group form-group col-md-8">
                                    @Html.TextBoxFor(x => x.Description, new { @class = "form-control col-md-8 select2", required = "required" })
                                </div>
                            </div>
                            <div class="col-md-12">
                                @if (ViewBag.MaintLot == true)
                                {
                                    <div class="col-md-6">
                                        <label class="col-md-6">Lot No</label>
                                        <div class="input-group form-group col-md-6">
                                            @Html.TextBoxFor(x => x.LotNo, new { @class = "form-control col-md-8 select2", required = "required" })
                                        </div>
                                    </div>
                                }
                                else
                                {
                                    <div class="col-md-6">
                                        <label class="col-md-6"></label>
                                        <div class="input-group form-group col-md-6">
                                        </div>
                                    </div>
                                }                                
                                <div class="col-md-5" style="text-align:right; margin-bottom:5px;">
                                    <input type="button" class="btn btn-primary" value="Add" id="add" />
                                </div>
                            </div>
                            <div class="col-md-12">
                                <label class="col-md-3 required" id="RecvIssuBy"></label>
                                <div class="input-group form-group col-md-8">
                                    @Html.DropDownListFor(x => x.IssueByCode, null, "--- Select ---", new { @class = "form-control select2", required = "required", @Value = ViewBag.IssueByCode })
                                    @Html.ValidationMessageFor(x => x.IssueByCode)
                                </div>
                            </div>

                            <div class="col-md-12">
                                <label class="col-md-3 required">Approved By</label>
                                <div class="input-group form-group col-md-8">
                                    @Html.DropDownListFor(x => x.AppByCode, null, "---- Select ----", new { @class = "form-control col-md-8 select2", required = "required", @Value = ViewBag.AppByCode })
                                    @Html.ValidationMessageFor(x => x.AppByCode)
                                </div>
                            </div>
                            <div class="col-md-12">
                                <label class="col-md-3 required">Date</label>
                                <div class="input-group form-group col-md-6">
                                    <input type="text" class="form-control datePage" id="@Html.IdFor(x => x.AppDate)" value="@DateTime.Today.ToShortDateString()">
                                    <span class="input-group-addon bg-primary b-0 text-white"><i class="ion-calendar"></i></span>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <label class="col-md-3">Time</label>
                                <div class="input-group form-group col-md-6">
                                    <input type="text" class="form-control" disabled="disabled" placeholder="HH:MM:SS" id="@Html.IdFor(x => x.Time)" value="@ViewBag.Time" required="required">
                                </div>
                            </div>

                            <div class="col-md-12">
                                <label class="col-md-3"></label>
                                <div class="col-md-8">
                                    <input type="button" value="Save" class="btn btn-primary" id="save" style="width:100px;" />
                                    <input type="button" value="Update" class="btn btn-primary" id="update" style="width:100px;" />
                                    <input type="button" value="Clear" class="btn btn-primary" id="clear" style="width:100px;" />
                                    @if (ViewBag.MaintVAT == true)
                                    {
                                        <span class="checkbox-button" style="float:right">
                                            <input type="checkbox" name="vat6p5" class="checkbox-primary" required="required" id="vat6p5" />
                                            <input type="button" class="btn-primary" value="VAT 6.5" id="btnVAT6p5" />
                                        </span>
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="col-md-12">
                                <label class="col-md-3">Voucher No</label>
                                <div class="input-group form-group col-md-6">
                                    <input class="form-control" id="VchrNo" name="VchrNo" type="text" value="@ViewBag.VchrNo">
                                    <span class="field-validation-valid" data-valmsg-for="VchrNo" data-valmsg-replace="true"></span>
                                </div>
                            </div>
                            <div class="col-md-12" style="margin-bottom:5px; border:1px solid; border-color:#adcceb; width:100%">
                                <div class="row" style="padding:18px">
                                    <div class="col-md-12">
                                        <br />
                                        <table class="table table-bordered table-responsive" id="datatable" style="width:100%;">
                                            <thead>
                                                <tr>
                                                    <th width="5%">SL</th>
                                                    <th width="20%">Code</th>
                                                    <th width="40%">Item&nbsp;Name</th>
                                                    <th width="15%">Qty</th>
                                                    <th width="15%">UPrice</th>
                                                    <th width="5%">Action</th>
                                                </tr>
                                            </thead>
                                            <tbody id="tbodyId"></tbody>
                                        </table>
                                        <br />
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <label class="col-md-3">Total Amount</label>
                                <div class="input-group form-group col-md-6">
                                    @Html.TextBoxFor(x => x.TotAmt, new { @class = "form-control col-md-8", required = "required" })
                                </div>
                            </div>
                            <div class="col-md-12">
                                <label class="col-md-3">Total Suplimentary Tax</label>
                                <div class="input-group form-group col-md-6">
                                    @Html.TextBoxFor(x => x.TotSupTaxAmt, new { @class = "form-control col-md-8", required = "required" })
                                </div>
                            </div>
                            <div class="col-md-12">
                                <label class="col-md-3">Total VAT Amount</label>
                                <div class="input-group form-group col-md-6">
                                    @Html.TextBoxFor(x => x.TotVATAmt, new { @class = "form-control col-md-8", required = "required" })
                                </div>
                            </div>
                            <div class="col-md-12">
                                <label class="col-md-3">Remarks</label>
                                <div class="input-group form-group col-md-8">
                                    @Html.TextBoxFor(x => x.Remarks, new { @class = "form-control col-md-8 select2", required = "required" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @section scripts{
        <script src="~/App_Themes/Theme1/plugins/select2/select2.min.js" type="text/javascript"></script>
        <script src="~/App_Themes/Theme1/plugins/bootstrap-datepicker/dist/js/bootstrap-datepicker.min.js"></script>
        <script src="../App_Themes/Theme1/plugins/datatables/jquery.dataTables.min.js"></script>
        <script src="../App_Themes/Theme1/plugins/datatables/dataTables.bootstrap.js"></script>
        <script src="../App_Themes/Theme1/plugins/datatables/dataTables.buttons.min.js"></script>
        <script src="../App_Themes/Theme1/plugins/datatables/buttons.bootstrap.min.js"></script>
        <script src="../App_Themes/Theme1/plugins/datatables/pdfmake.min.js"></script>
        <script src="../App_Themes/Theme1/plugins/datatables/vfs_fonts.js"></script>
        <script src="../App_Themes/Theme1/plugins/datatables/buttons.html5.min.js"></script>
        <script src="../App_Themes/Theme1/plugins/datatables/buttons.print.min.js"></script>
        <script src="../App_Themes/Theme1/plugins/datatables/dataTables.fixedHeader.min.js"></script>
        <script src="../App_Themes/Theme1/plugins/datatables/dataTables.keyTable.min.js"></script>
        <script src="../App_Themes/Theme1/plugins/datatables/dataTables.responsive.min.js"></script>
        <script src="../App_Themes/Theme1/plugins/datatables/responsive.bootstrap.min.js"></script>
        <script src="../App_Themes/Theme1/plugins/datatables/dataTables.scroller.min.js"></script>
        <script type="text/javascript" src="../App_Themes/Theme1/plugins/parsleyjs/dist/parsley.min.js"></script>
        <!-- Datatable init js -->
        <script src="../App_Themes/Theme1/blue/assets/pages/datatables.init.js"></script>
        <script>
            $(document).ready(function () {

                function select2Focus() {
                    var select2 = $(this).data('select2');
                    setTimeout(function() {
                        if (!select2.opened()) {
                            select2.open();
                        }
                    }, 0);
                }
                $("input:text:visible:first").focus();
                $("#update").hide();

                $("#ExQty, #Amount, #TotAmt, #TotSupTaxAmt, #TotVATAmt, #HSCode, #vat6p5").prop("disabled", true);
                //$("#Amount").prop("disabled", true);
                //$("#TotAmt").prop("disabled", true);
                //$("#TotSupTaxAmt").prop("disabled", true);
                //$("#TotVATAmt").prop("disabled", true);
                //$("#HSCode").prop("disabled", true);
                //$("#vat6p5").prop("disabled", true);
                $("#TotSupTaxAmt, #TotVATAmt").val(0);
                $("#VATAmt, #SupTaxAmt").val(0);



                $("#pnlFromLoc").show();
                $("#pnlToLocCodeAll").show();
                $("#pnlIssuNo").hide();
                $("#pnlRecvNo").hide();
                document.getElementById('issueLbl').innerHTML = 'Date';
                document.getElementById('RecvIssuBy').innerHTML = 'Issued/Received By';
                $("#FromLocCode").select2().one('select2-focus', select2Focus).on("select2-blur", function () {$(this).one('select2-focus', select2Focus)});
                $("#ToLocCode").select2().one('select2-focus', select2Focus).on("select2-blur", function () {$(this).one('select2-focus', select2Focus)});
                $("#IssueAppByCode").select2().one('select2-focus', select2Focus).on("select2-blur", function () {$(this).one('select2-focus', select2Focus)});
                $("#IssueByCode").select2().one('select2-focus', select2Focus).on("select2-blur", function () {$(this).one('select2-focus', select2Focus)});
                $("#ItemCode").select2().one('select2-focus', select2Focus).on("select2-blur", function () {$(this).one('select2-focus', select2Focus)});
                $("#AppByCode").select2().one('select2-focus', select2Focus).on("select2-blur", function () {$(this).one('select2-focus', select2Focus)});
                //$("#VchrNo").prop("disabled", true);
                $("#ItemType").select2().one('select2-focus', select2Focus).on("select2-blur", function () {$(this).one('select2-focus', select2Focus)});

                $("#Qty, #Price").on("keydown keyup", function () {
                    $("#Amount").val(parseFloat($("#Qty").val()) * parseFloat($("#Price").val()));
                });

                $('#datatable').DataTable({
                    "paging":   false,
                    "ordering": false,
                    "info":     false,
                    "searching": false
                });
                var table = $('#datatable').dataTable();
                $.ajax({
                    url: '@Url.Action("GetNewVoucherNo", "Issue")',
                    contentType: "application/json;charset=utf-8",
                    data: { VType: 'STS', TrDate: $("#IssueDate").val() },
                    type: 'GET',
                    dataType: 'json',
                    success: function (datas) {
                        $("#VchrNo").val(datas);
                    }
                });

                $(document).on("click", "#newVchr", function () {
                    $("#addModalButton").show();
                    $.ajax({
                        url: '@Url.Action("GetNewVoucherNo", "Issue")',
                        contentType: "application/json;charset=utf-8",
                        data: { VType: 'STS' },
                        type: 'GET',
                        dataType: 'json',
                        success: function (datas) {
                            if (datas != 0) {
                                $("#VchrNo").val(datas);
                            }
                        }
                    })
                });

                $(document).on("click", "#btnVAT6p5", function (e) {
                    var TransNo = $('#PreIssueNo').val();
                    if ($("#vat6p5").prop("checked") == true) {
                        window.open('@Url.Action("TransWiseVat6P5RptPdf", "VATRpt", null)?TransNo=' + TransNo);
                    }
                })

                var loadInfo = {
                    IssueNo: "",
                    ReceiveNo: "",
                    FromLocCode: "",
                    ToLocCode: "",
                    LocCode: "",
                    IssueDate: "",
                    RefNo: "",
                    Accode: "",
                    ItemCode: "",
                    Description: "",
                    Qty: "",
                    ExQty: "",
                    Price: "",
                    LotNo: "",
                    Time: "",
                    RefDate: "",
                    IssueAppByCode: "",
                    IssueByCode: "",
                    AppByCode: "",
                    AppDate: "",
                    StoreType: "",
                    VchrNo: "",
                    TotAmt: ""
                };
                function setOrder() {
                    if ($("#issuStoreType").is(":checked")) {
                        loadInfo.StoreType = $("#issuStoreType").val();
                    }
                    if ($("#recvStoreType").is(":checked")) {
                        loadInfo.StoreType = $("#recvStoreType").val();
                    }
                    //loadInfo.StoreType = $("#StoreType").val();
                    loadInfo.IssueNo = $("#IssueNo").val();
                    loadInfo.ReceiveNo = $("#RcvNo").val();
                    loadInfo.FromLocCode = $("#FromLocCode").val();
                    loadInfo.ToLocCode = $("#ToLocCode").val();
                    loadInfo.LocCode = $("#ToLocCode").val();
                    loadInfo.IssueDate = $("#IssueDate").val();
                    loadInfo.RefNo = $("#RefNo").val();
                    loadInfo.Accode = $("#Accode").val();
                    loadInfo.ItemCode = $("#ItemCode").val();
                    loadInfo.Description = $("#Description").val();
                    loadInfo.Qty = $("#Qty").val();
                    loadInfo.ExQty = $("#ExQty").val();
                    loadInfo.Price = $("#Price").val();
                    loadInfo.LotNo = $("#LotNo").val();
                    loadInfo.Time = $("#Time").val();
                    loadInfo.RefDate = $("#RefDate").val();
                    loadInfo.IssueAppByCode = $("#IssueAppByCode").val();
                    loadInfo.IssueByCode = $("#IssueByCode").val();
                    loadInfo.AppByCode = $("#AppByCode").val();
                    loadInfo.AppDate = $("#AppDate").val();
                    loadInfo.VchrNo = $("#VchrNo").val();
                    loadInfo.TotAmt = $("#TotAmt").val();
                    loadInfo.Remarks = $("#Remarks").val();
                };

                $("#RefNo").on('keydown', function (e) {
                    if (e.which == 13 || e.which == 9) {
                        $.ajax({
                            url: '@Url.Action("GetAllByRefNo", "StoreTransfer")',
                            contentType: "application/json;charset=utf-8",
                            data: { refNo: $("#RefNo").val() },
                            type: 'GET',
                            dataType: 'json',
                            success: function (datas) {

                                if (datas.RcvNo == "undefined") {
                                    alert("error")
                                }
                                else {

                                    if (moment(datas.Main.IssueDate).format('MM/DD/YYYY') != moment('01/01/1900').format('MM/DD/YYYY')) {
                                        $("#IssueDate").datepicker("setDate", DateInDMYformat(datas.Main.IssueDate));
                                    }
                                    $("#FromLocCode").val(datas.Main.ToLocCode).trigger('change.select2');
                                    $("#ToLocCode").val(datas.Main.FromLocCode).trigger('change.select2');
                                    $("#ItemCode").val(datas.Main.ItemCode).trigger('change.select2');
                                    $("#Description").val(datas.Main.Description);
                                    if (moment(datas.Main.RefDate).format('MM/DD/YYYY') != moment('01/01/1900').format('MM/DD/YYYY')) {
                                        $("#RefDate").datepicker("setDate", DateInDMYformat(datas.Main.RefDate));
                                    }
                                    $("#Remarks").val(datas.Main.Remarks);
                                    $("#IssueByCode").val(datas.Main.IssueByCode).trigger('change.select2');
                                    $("#AppByCode").val(datas.Main.AppByCode).trigger('change.select2');
                                    if (moment(datas.Main.IssDate).format('MM/DD/YYYY') != moment('01/01/1900').format('MM/DD/YYYY')) {
                                        $("#AppDate").datepicker("setDate", DateInDMYformat(datas.Main.IssDate));
                                    }


                                    var table = $("#datatable").DataTable();
                                    table.clear().draw();
                                    orders = [];
                                    if (datas.Details.length > 0) {
                                        var j = 0;
                                        $.each(datas.Details, function (index, data) {
                                            j++;
                                            data.Sl = j;
                                            data.CurrQty = data.Qty;
                                            orders.push(data);

                                        });
                                        isEdit = 1;
                                        //PurpuseBySrcDest();
                                        addOnTable();
                                    }
                                }

