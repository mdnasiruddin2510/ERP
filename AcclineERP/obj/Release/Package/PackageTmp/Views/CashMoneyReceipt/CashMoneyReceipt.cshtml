            $(document).on("click", "#btnUpdate", function () {
                setOrder();
                var validate = validateOnSave(loadInfo);
                if (validate != "") {
                    alert(validate);
                    return;
                }

                $.ajax({
                    url: '@Url.Action("UpdateCashMR", "CashMoneyReceipt")',
