@model App.Domain.NewChart

<div class="modal-dialog">
    <div class="modal-content">

        <div class="panel panel-color panel-primary">
            <button type="button"
                    class="close"
                    data-dismiss="modal"
                    aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            <div class="panel-heading">
                <h3 class="panel-title">Add Account</h3>
            </div>
        </div>
        <div class="modal-body">
            @using (Html.BeginForm("AddNewNode", "ChartOfAccounts", FormMethod.Post, new { @id = "formaddNode", @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
            {
                <div class="clearfix">
                </div>
                <div class="clearfix">
                </div>

                <div class="col-md-12">

                    <div class="col-md-6">
                        <div class="col-md-12">
                            @Html.Label("CODE")
                            @Html.TextBoxFor(model => model.Accode, new { @class = "form-control" })
                            @Html.HiddenFor(model => model.AcSyscode)
                        </div>
                        <div class="col-md-12">
                            @Html.Label("A/C Name")
                            @Html.TextBoxFor(model => model.AcName, new { @class = "form-control" })

                        </div>
                    </div>
                    <div>
                        <div class="col-md-4" style="float:right">
                            <div class="checkbox checkbox-primary" style="font-size:14px;font-weight:bolder">
                                <input id="IsModify" type="checkbox" name="IsModify" />
                                <label for="IsModify">Modify</label>
                            </div>
                        </div>
                        <div class="petenddiv hidden">

                            <div class="col-md-6">
                                <div class="col-md-12">
                                    @Html.Label("A/C Name")
                                    @Html.TextBoxFor(model => model.NodeName, new { @class = "form-control" })

                                </div>
                                <div class="col-md-12">
                                    @Html.Label("Old Code")
                                    @Html.TextBoxFor(model => model.OldCode, new { @class = "form-control" })
                                </div>
                            </div>
                        </div>

                        <div class="sNode">
                            <div class="col-md-6">
                                <div class="col-md-12">
                                    @Html.Label("A/C Name")
                                    @Html.TextBoxFor(model => model.NewAcName, new { @class = "form-control" })
                                </div>
                                <div class="col-md-12">
                                    @Html.Label("Old Code")
                                    @Html.TextBoxFor(model => model.NewOldCode, new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>


                <div class="row col-md-12" style="padding:20px 0px 0px 0px">
                    <div class="col-md-12">

                        <div class="form-group col-md-4">
                            <input type="file" id="FileUpload" name="file" class="" onchange="checkfile(this);" />
                        </div>
                        <div class="form-group col-md-3">
                            <input type="submit" value="Import" id="btnImportNChart" class="btn btn-primary button" />
                        </div>
                        @*<div class="col-md-2">Excel/CSV/XML</div>*@
                        <div class="col-md-5">
                            <div class="col-md-8">Download File Format:</div>
                            <div class="form-group col-md-4">
                                @Html.ActionLink("Download", "DownlaodExcel", "ChartOfAccounts")
                            </div>
                        </div>

                    </div>
                </div>


                <div class="clearfix">
                </div><br /><br />
                <div class="col-md-12">
                    <div class="col-md-2 pull-right">
                        <input type="button" id="closePopOver" value="Close" class="btn btn-primary" />
                    </div>
                    <div class="col-md-2 pull-right">
                        <input type="submit" id="savenode" value="Save" class="btn btn-primary" />
                    </div>
                </div>

                <div class="clearfix">
                </div>


            }

        </div>
    </div>
</div>

